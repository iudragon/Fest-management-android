<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_margin="1dp"
    >

    <android.support.v7.widget.CardView
        android:layout_width="150dp"
        android:layout_height="150dp"
        app:cardCornerRadius="4dp"
        app:cardMaxElevation="2dp"
        app:cardElevation="1dp"
        android:layout_centerInParent="true"
        >




    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@drawable/img6"
        >



        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Event name "
            android:textSize="20sp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="15dp"
            android:textColor="#ff4912"
            android:id="@+id/post_events"
            />

        <TextView
            android:id="@+id/post_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="10dp"
            android:drawableLeft="@drawable/ic_date_range_black_24dp"
            android:drawablePadding="8dp"
            android:maxLines="1"
            android:textColor="#ff49"
            android:text="date here"
            android:textSize="15sp" />





        <TextView
            android:id="@+id/post_venue"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="venue goes here"
            android:layout_marginLeft="15dp"
            android:textSize="15sp"
            android:textColor="#ff49"
            android:drawablePadding="8dp"
            android:drawableLeft="@drawable/ic_location_on_black_24dp"/>

        <TextView
            android:id="@+id/btn_reg"
            android:layout_width="150dp"
            android:layout_height="30dp"
            android:text="REGISTER"
            android:background="@color/greenyellow"
            android:layout_marginTop="20dp"
            android:textColor="#403d3d"
            android:textStyle="bold"
            android:textAlignment="center"
            android:layout_gravity="right"
            android:layout_marginRight="20dp"
            />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/grey"
            android:layout_below="@id/post_venue"
            android:id="@+id/view"
            android:layout_marginTop="10dp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="17dp"
            android:text="View event description"
            android:layout_marginBottom="10dp"
            android:textColor="@color/violet"/>

    </RelativeLayout>
    </android.support.v7.widget.CardView>
</RelativeLayout>
