<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"

    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_marginBottom="10dp"
    tools:context=".ITQuizTestActivity"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >
        <TextView
            android:id="@+id/post_question"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="question here"
            android:drawablePadding="8dp"
            android:layout_margin="20dp"
            android:textColor="#f11330"
            android:layout_marginBottom="10dp"
            android:textSize="20sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="option 1 "
            android:id="@+id/post_option1"
            android:layout_marginTop="20dp"
            android:layout_gravity="left"
            android:layout_marginLeft="30dp"
            android:textSize="20sp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="10dp"
            android:id="@+id/post_option2"
            android:text="option 2 "
            android:textSize="20sp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="10dp"
            android:id="@+id/post_option3"
            android:text="option 3 "
            android:textSize="20sp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="10dp"
            android:id="@+id/post_option4"
            android:text="option 4"
            android:textSize="20sp"/>

        <EditText
            android:layout_width="200dp"
            android:layout_marginTop="30dp"
            android:layout_height="wrap_content"
            android:hint="Enter your answer"
            android:id="@+id/post_answer"
            android:textAlignment="center"
            android:layout_gravity="center"/>

        <TextView
            android:layout_width="100dp"
            android:layout_height="30dp"
            android:text="SUBMIT"
            android:id="@+id/btnsub"
            android:textAlignment="center"
            android:textStyle="bold"
            android:background="#10fd27"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="30dp"
            android:layout_gravity="center"/>

    </LinearLayout>

</android.support.v7.widget.CardView>